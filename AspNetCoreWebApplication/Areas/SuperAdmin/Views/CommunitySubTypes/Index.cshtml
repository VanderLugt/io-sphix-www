@model IEnumerable<Sphix.DataModels.Communities.CommunityCatgoryDataModel>
@{
    ViewData["Title"] = "Community Sub Types";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">Community Sub Types</h1>
    <button class="btn btn-success btn-sm" onclick="Edit(0)" ><i class="fas fa-plus-circle"></i> Add New</button>
</div>

<div class="dashboard-task-block">
    <h2>Groups</h2>
    <div class="table-responsive">
        <table class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Is Active?</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Where(c => c.Type == 1))
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.IsActive</td>
                        <td><button  class='btn btn-info btn-sm' onclick="Edit(@item.Id)"><i class="far fa-edit"></i> Edit</button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <h2>Associations</h2>
    <div class="table-responsive">
        <table class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Is Active?</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Where(c => c.Type == 2))
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.IsActive</td>
                        <td><button class='btn btn-info btn-sm' onclick="Edit(@item.Id)"><i class="far fa-edit"></i> Edit</button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <h2>Interests</h2>
    <div class="table-responsive">
        <table class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Is Active?</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Where(c => c.Type == 5))
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.IsActive</td>
                        <td><button  class='btn btn-info btn-sm' onclick="Edit(@item.Id)"><i class="far fa-edit"></i> Edit</button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div>
    <fieldset>
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="modal fade" tabindex="-2" id="divReviewCommunityTypesModel"
                         data-keyboard="false" data-backdrop="static">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h2 id="divCommunityGroupSubTitle"> Add/Update</h2>

                                    <button type="button" class="close" data-dismiss="modal">
                                        ×
                                    </button>
                                </div>
                                <div class="modal-body" id="divReviewCommunityGroup">
                                    Loading....
                                </div>
                                <div class="form-submit-btn modal-footer">
                                    <button type="submit" onclick="AddUpdate();" class="btn btn-primary">Save</button>
                                    <button type="button" data-dismiss="modal" class="btn btn-info">
                                        Cancel
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </fieldset>
</div>
@section Scripts {
   
  <script>
         function Edit(Id) {
            $("#divReviewCommunityGroup").html('Loading..');
            $("#divReviewCommunityGroup").load('/SuperAdmin/CommunitySubTypes/Add?Id=' + Id);
            $('#divReviewCommunityTypesModel').modal('toggle');
          }
    function getAntiForgeryToken() {
    token = $('input[name=__RequestVerificationToken]').val();
    //alert(token);
    return token;
}
function AddUpdate() {
    if (formValidation('CommunityTypeForm') === false) {
        return false;
    }
     var dataModel = {
        Id: $('#hdnId').val(),
        CommunityId: $('#drpCommunityId').val(),
        Type: $('#drpType').val(),
         Name: $('#txtName').val(),
         IsActive: $('#chkCheckBox').prop("checked")
    };
    
    //var _data=[];
        $.ajax({
        type: 'POST',
        data: { model: dataModel },
        url: '/SuperAdmin/CommunitySubTypes/Save',
        success: function (data) {
            if (data.status) {
                //toastr.success(data.messsage, '', { timeOut: 1000 });
                swal(data.messsage)
                .then((value) => {
                  location.reload();
                });
               
            }
            else {
                //toastr.error(data.messsage, 'Warning', { timeOut: 1500 });
                  swal("Sorry!", data.messsage, "error");
            }
        },
        failure: function (response) {
            swal("Sorry!", response.responseText, "error");
        },
        error: function (response) {
            swal("Sorry!", response.responseText, "error");
        }

    });
}
  </script>
}

