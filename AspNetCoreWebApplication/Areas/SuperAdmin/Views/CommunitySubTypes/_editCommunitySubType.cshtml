@model Sphix.ViewModels.Communities.CommunitySubTypesViewModel
    <div id="CommunitySubTypeForm">
        <div class="form-group mb-4">
            <div class="row">
                <div class="col-md-12">
                    <p class="themetextP">Communities</p>
                    <select id="drpCommunityId" class="form-control"
                            asp-items="@(new SelectList(ViewBag.Communities,"Value", "Text",Model.CommunityId))"></select>
                </div>
            </div>
        </div>
        <div class="form-group mb-4">
            <div class="row">
                <div class="col-md-12">
                    <p class="themetextP">Type</p>
                    <select id="drpType" class="form-control"
                            asp-items="@(new SelectList(ViewBag.Types,"Value", "Text",Model.Type))"></select>
                </div>
            </div>
        </div>
        <div class="form-group mb-4">
            <div class="row">
                <div class="col-md-12">
                    Name
                    <input type="text" id="txtName" class="form-control" value="@Model.Name" placeholder="community name (max 200 characters)"  message="name is a required field." required />
                </div>
            </div>
        </div>

        <div class="form-group mb-4">
            <div class="row">
                <div class="col-md-4 p-white-color">
                    <p style="color:#000;">Is Active</p>
                </div>
                <div class="col-md-8 p-white-color">
                    <input type="checkbox" id="chkCheckBox" checked="@Model.IsActive" />

                </div>
            </div>
        </div>

    </div>
<input type="hidden" id="hdnId" value="@Model.Id" />
