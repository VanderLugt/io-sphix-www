<div>
    <div class="form-group mb-4">
        <div class="row">
            <div class="col-md-12">
                <p class="themetextP">Roles</p>
                <select id="drpUserRoles" class="form-control"
                        asp-items="@(new SelectList(Model,"Id", "RoleName"))"></select>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="hdnId" value="@ViewBag.Id" />
<div class="modal-footer">
    <button type="submit" onclick="Save();" class="btn btn-success">Update</button>
    <button type="button" data-dismiss="modal" class="btn btn-info">
        Cancel
    </button>
</div>
<script>
   function Save() {
    if (confirm("Are you sure, you want to edit this ...?")) {
        $.ajax({
            type: 'POST',
            data: { Id: $('#hdnId').val(), RoleId: $('#drpUserRoles').val() },
            url: '/SuperAdmin/SiteMembers/SaveRole',
            success: function (data) {
                //alert(JSON.stringify(data));
                if (data.status) {
                    // swal("Wait", "Good", "success");
                    toastr.success(data.messsage, '', { timeOut: 1000 });
                    usersDataTable.ajax.reload();
                    $('#divUserRoleModel').modal('hide');
                    //DashBoard
                }
                else {
                    swal("Sorry!", data.messsage, "warning");
                }
                //$('#divLoadStep3').html(data);
            },
            failure: function (response) {
                // alert(response.responseText);
                swal("Sorry!", response.responseText, "error");
            },
            error: function (response) {
                swal("Sorry!", response.responseText, "error");
            }
        });
    }
}
</script>