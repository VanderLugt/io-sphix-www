                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </fieldset>
</div>
@section Scripts {
    <script src="~/js/admin/UserCommuntyGroup.js"></script>
    <script>
        var communityGroupsDataTable;
        $(document).ready(function () {
            function fill_CommunityGroupsdatatable(IsPublish = '') {
                communityGroupsDataTable = $("#tblCommunitiesList").DataTable({
                    "processing": false, // for show progress bar
                    "serverSide": true, // for process server side
                    "filter": true, // this is for disable filter (search box)
                    "orderMulti": false, // for disable multiple column at once
                    "pageLength": 10,
                    //"lengthMenu": [10, 25, 50],
                    "ajax": {
                        "url": "/SuperAdmin/UsersCommunityGroups/CommunitiesGroupsList",
                        "type": "POST",
                        "datatype": "json",
                        "data": { "IsPublish": IsPublish }
                    },
                    "columnDefs":
                        [{
                            "targets": [0],
                            "visible": false,
                            "searchable": false,
                            /* true or false */
                        }],
                    "columns": [
                        { "data": "id", "name": "id", "autoWidth": true },
                        { "data": "title", "name": "title", "autoWidth": true },
                        { "data": "isPublish", "name": "isPublish", "autoWidth": true },
                        { "data": "postDate", "name": "postDate", "autoWidth": true },
                        {
                            "render": function (data, type, full, meta) {
                                return "<a href='#' class='btn btn-info' onclick=ShowCommunityGroupRview('" + full.id + "'); >View</a>";
                            }, 'orderable': false
                        },
                    ]

                });
            }
            fill_CommunityGroupsdatatable();


            $('#drpStatus').on('change', function () {
                //alert(this.value);
                $('#tblCommunitiesList').DataTable().destroy();
                fill_CommunityGroupsdatatable(this.value);
            });

        });

        function ShowCommunityGroupRview(Id) {
            //  $('#divCommunityGroupSubTitle').html('Events');
            $("#divReviewCommunityGroup").html('Loading..');
            $("#divReviewCommunityGroup").load('/SuperAdmin/UsersCommunityGroups/ViewCommunityGroup?Id=' + Id);
            $('#divReviewCommunityGroupModel').modal('toggle');
        }

    </script>
}


