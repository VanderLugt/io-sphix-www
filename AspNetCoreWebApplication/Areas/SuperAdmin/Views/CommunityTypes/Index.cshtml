
@{
    ViewData["Title"] = "Community Types";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">Community Types</h1>
</div>

<div class="dashboard-task-block">
    <div class="table-responsive">
        <table id="tblDataTableList" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Is Active?</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<div>
    <fieldset>
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="modal fade" tabindex="-2" id="divReviewCommunityTypesModel"
                         data-keyboard="false" data-backdrop="static">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h2 id="divCommunityGroupSubTitle"> Add/Update</h2>

                                    <button type="button" class="close" data-dismiss="modal">
                                        ×
                                    </button>
                                </div>
                                <div class="modal-body" id="divReviewCommunityGroup">
                                    Loading....
                                </div>
                                <div class="form-submit-btn modal-footer">
                                    <button type="submit" onclick="AddUpdate();" class="btn btn-primary">Save</button>
                                    <button type="button" data-dismiss="modal" class="btn btn-info">
                                        Cancel
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </fieldset>
</div>
<link href="~/admintheme/css/bootstrap-colorpicker.css" rel="stylesheet" />
@section Scripts {
    <script src="~/admintheme/js/bootstrap-colorpicker.js"></script>
    <script src="~/js/SuperAdmin/CommunityTypes.js"></script>
    <script>
    var communitytypesDataTable;
        $(document).ready(function () {
            function fill_CommunityGroupsdatatable(IsPublish = '') {
                communitytypesDataTable = $("#tblDataTableList").DataTable({
                    "processing": false, // for show progress bar
                    "serverSide": true, // for process server side
                    "filter": true, // this is for disable filter (search box)
                    "orderMulti": false, // for disable multiple column at once
                    "pageLength": 5,
                    //"lengthMenu": [10, 25, 50],
                    "ajax": {
                        "url": "/SuperAdmin/CommunityTypes/CommunitiesGroupsList",
                        "type": "POST",
                        "datatype": "json",
                        "data": { "IsPublish": IsPublish }
                    },
                    "columnDefs":
                        [{
                            "targets": [0],
                            "visible": false,
                            "searchable": false,
                            /* true or false */
                        }],
                    "columns": [
                        { "data": "id", "name": "id", "autoWidth": true },
                        { "data": "name", "name": "name", "autoWidth": true },
                        { "data": "isLive", "name": "isLive", "autoWidth": true },
                        {
                            "render": function (data, type, full, meta) {
                                return "<a href='#' class='btn btn-info' onclick=Edit('" + full.id + "'); >Edit</a>";
                            }, 'orderable': false
                        },
                    ]

                });

                $('#tblDataTableList_filter').append(' <a href="#" class="btn btn-success btn-sm" onclick="Edit(0);" title="add new community type"><i class="fas fa-plus-circle"></i> Add</a>');
            }
            fill_CommunityGroupsdatatable();


            $('#drpStatus').on('change', function () {
                //alert(this.value);
                $('#tblCommunitiesList').DataTable().destroy();
                fill_CommunityGroupsdatatable(this.value);
            });

        });

        function Edit(Id) {
            //  $('#divCommunityGroupSubTitle').html('Events');
            $("#divReviewCommunityGroup").html('Loading..');
            $("#divReviewCommunityGroup").load('/SuperAdmin/CommunityTypes/Add?Id=' + Id);
            $('#divReviewCommunityTypesModel').modal('toggle');
        }

    </script>
}

