<div class="d-flex justify-content-center align-items-center container">
    <div class="row">
        
        <div class="center-form-block" style="margin-top:0px;width:796px;">
            <div class="form-group mb-4 ">
                <div class="container">
                    <div style="margin:0 auto;">

                        <table id="tblArticlesList" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Articel Title</th>
                                    <th>Posted on</th>
                                    <th>Edit</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>

        </div>

    </div>
    
</div>
<div>
    <fieldset>
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="modal fade" tabindex="-3" id="updateArticle"
                         data-keyboard="false" data-backdrop="static">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    Add/Update Article
                                </div>
                                <div class="modal-body">
                                    <div class="form-group" id="divArticleEvent">
                                        Loading...
                                    </div>
                                </div>
                                <div class="form-submit-btn modal-footer">
                                    <button type="submit"  onclick="AddUpdateArticle();" class="btn btn-primary">Save</button>
                                    <button type="button" onclick="hideArticleModel();" class="btn btn-info">
                                        Cancel
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </fieldset>
</div>

<script>

   var _communityId = 0;

    var _liveEventFromDate = '';
    var _liveEventToDate = '';
    var _liveEventDayName = '';
    var _liveEventTime = '';
    var _liveEventTimeZone = '';
    var articlesDataTable;
    $(document).ready(function ()
        {
          articlesDataTable=  $("#tblArticlesList").DataTable({
                "processing": false, // for show progress bar
                "serverSide": true, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "pageLength": 10,
                //"lengthMenu": [10, 25, 50],
                "ajax": {
                    "url": "/ManageCommunityGroups/MyCommunityGroupArticlesList",
                    "type": "POST",
                    "datatype": "json",
                    "data": {"CommunityGroupsId":@ViewBag.Id}
                },
                "columnDefs":
                [{
                    "targets": [0],
                    "visible": false,
                    "searchable": false,
                    /* true or false */
                }],
                "columns": [
                    { "data": "id", "name": "id", "autoWidth": true },
                    { "data": "title", "name": "title", "autoWidth": true },
                    { "data": "postDate", "name": "postDate", "autoWidth": true },
                    //{ "data": "isLive", "name": "IsLive", "autoWidth": true },
                    {
                        "render": function (data, type, full, meta)
                        {
                             return "<a href='#' class='btn btn-info btn-sm' onclick=EditEvent('" + full.id + "','" + full.communityGroupsId + "'); ><i class='far fa-edit '></i> Edit</a>";
                        }, 'orderable': false
                    },
                ]

            });

           $('#tblArticlesList_filter').append(' <a href="#" class="btn btn-success btn-sm" onclick="EditEvent(0,@ViewBag.Id);" title="add new article"><i class="fas fa-plus-circle"></i> Add</a>');

        });


    function EditEvent(Id,CommunityGroupId) {
        $("#divArticleEvent").load('ManageCommunityGroups/CommunityGroupArticleEdit?Id=' + Id+'&CommunityGroupId='+CommunityGroupId);
        $('#updateArticle').modal('toggle');
    }
    function hideArticleModel() {
        $('#updateArticle').modal('hide');
        
    }

</script> 