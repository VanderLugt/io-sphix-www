<script>
    function checkCreateOpenHoursTable(_this) {
        if (_this.checked) {
            $("#btnSubmitCreateOpneHoursTable").removeAttr("disabled");
        }
        else {
            $("#btnSubmitCreateOpneHoursTable").attr("disabled", true);
        }
        
    }
    
</script>