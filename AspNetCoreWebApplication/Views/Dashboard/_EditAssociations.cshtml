@model Sphix.ViewModels.User.SignUpStep3ViewModel
<input hidden="hidden" id="hndAssociationId" value="@Model.editId" />
@if (Model.GroupsList.Count() > 0)
{
<div class="form-group mb-4">
    Groups
    <select id="drpAssocGroups" class="form-control"
            asp-items="@(new SelectList(Model.GroupsList,"Value", "Text",Model.SelectedGroupId))"></select>
</div>
}
else
{
    <input type="hidden" id="drpAssocGroups" value="0" />
}
@if (Model.Association.Count() > 0)
{
<div class="form-group mb-4">
    Association
    <select id="drpAssocAssociation" class="form-control"
            asp-items="@(new SelectList(Model.Association,"Value", "Text",Model.SelectedAssociationId))"></select>
</div>
}
else
{
    <input type="hidden" id="drpAssocAssociation" value="0" />
}
@if (Model.Type1List.Count() > 0)
{
<div class="form-group mb-4">
    Type1
    <select id="drpAssocType1" class="form-control"
            asp-items="@(new SelectList(Model.Type1List,"Value", "Text",Model.SelectedType1Id))"></select>
</div>
}
else
{<input type="hidden" id="drpAssocType1" value="0" />}
@if (Model.Type2List.Count() > 0)
{
<div class="form-group mb-4">
    Type2
    <select id="drpAssocType2" class="form-control"
            asp-items="@(new SelectList(Model.Type2List,"Value", "Text",Model.SelectedType2Id))"></select>
</div>
}
else
{<input type="hidden" id="drpAssocType2" value="0" />}
<div class="form-group mb-4">

    <div class="btn-group-toggle" data-toggle="buttons">
        @if (Model.Interests.Count() > 0)
        {
            <h5 class="selected">Associated Interests:</h5>
            foreach (var item in Model.Interests)
            {
                <label class="btn btn-secondary">
                    @item.Text
                    <input type="checkbox" class="chkAssocInterests" id="@item.Value" checked="@item.Selected" autocomplete="off">
                    <span class="checkmark"></span>
                </label>
            }
        }
        else
        {
            <input type="checkbox" class="chkAssocInterests" id="0" checked style="display:none;" autocomplete="off">
        }
    </div>
</div>

<style>
    .btn-group-toggle > .btn, .btn-group-toggle > .btn-group > .btn {
        margin: 1px;
    }
</style>
<script>
     function setCheckedInterestsIds() {
        _assocInterests = '';
         $('.chkAssocInterests').each(function () {
            //iterate all listed checkbox items
            if (this.checked) {
                _assocInterests += $(this).attr('Id') + ',';
                }
            });
    }
</script>
