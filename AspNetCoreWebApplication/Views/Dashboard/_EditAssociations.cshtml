@model Sphix.ViewModels.User.SignUpStep3ViewModel
<input hidden="hidden" id="hndAssociationId" value="@Model.editId" />

<div class="form-group mb-4">

    <div class="btn-group-toggle" data-toggle="buttons">
        @if (Model.GroupsList.Count() > 0)
        {
        <p >Groups:</p>
            foreach (var item in Model.GroupsList)
            {
                <label class="btn btn-secondary">
                    @item.Text
                    <input type="checkbox" class="chkGroups" id="@item.Value" checked="@item.Selected" autocomplete="off">
                    <span class="checkmark"></span>
                </label>
            }
        }
        else
        {
            <input type="checkbox" class="chkGroups" id="0" checked style="display:none;" autocomplete="off">
        }
    </div>
</div>
<div class="form-group mb-4">

    <div class="btn-group-toggle" data-toggle="buttons">
        @if (Model.Association.Count() > 0)
        {
            <p >Associations:</p>
            foreach (var item in Model.Association)
            {
                <label class="btn btn-secondary">
                    @item.Text
                    <input type="checkbox" class="chkAssociations" id="@item.Value" checked="@item.Selected" autocomplete="off">
                    <span class="checkmark"></span>
                </label>
            }
        }
        else
        {
            <input type="checkbox" class="chkAssociations" id="0" checked style="display:none;" autocomplete="off">
        }
    </div>
</div>
