<style>
    slider {
        width: 50%;
        margin: 100px auto;
        }


    .slick-slide {
        margin-right:5px;
    }
    .slick-slide:last-child {
        margin-right: 0;
    }
    .slick-slide img {
        width: 100%;
    }
    .slick-slide .community-main-body {
        margin-bottom: 0;
    }

    .slick-prev:before,
    .slick-next:before {
        color: black;
    }
    .slider{
        background:none;
    }

    .slick-slide {
        transition: all ease-in-out .3s;
        opacity: 1;
    }

    .slick-active {
        opacity: 1;
    }

    .slick-current {
        opacity: 1;
    }
    .commuity-header-block {
        display: inline-block;
        width: 100%;
    }
    .commuity-header-block .community-head-title {
        float: left;
    }
    .commuity-header-block .community-button {
        float: right;
    }
    .commuity-header-block .community-head-title h1 {
        font-size: 15px;
        color:#fff;
    }
    .commuity-header-block .community-head-title h1 span {
        color: #ea9c0c;
        font-weight: bold;
    }
    .commuity-header-block .community-button a {
        color: #fff;
        font-size: 16px;
        margin-top: 10px;
        display: inline-block;
    }
    .commuity-header-block .community-button a:hover{
        text-decoration:none;
    }
</style>
@model IEnumerable<Sphix.ViewModels.UserCommunities.CommunityGroupArticlesList>
<div class="commuity-header-block">
    <div class="community-head-title">
        <h1><span>Content</span> Articels, Questions & Stories That Matter </h1>
    </div>
    @if (User.IsInRole("admin"))
    {
        <div class="community-button">
            <a href="#" onclick="AddArticel(0,@ViewBag.CommunityGroupId)">Create New +</a>
        </div>
    }
</div>
@if (Model.Count() > 0)
{
<div class="regularArticle slider">
    @foreach (var item in Model)
    {

        <div class="col-lg-12 col-md-12 col-sm-12 community-main-body">
            <div class="community-category">@item.Title</div>
            <div class="col-md-12  p-white-color">
                <p><i class="fas fa-user"></i> 0 Engaged</p>
            </div>
            <div class="community-category-bottom">
                @item.PostDate
                <a href="#" class="rsvp-icons" onclick="LoadArticleDetail(@item.Id);">Read</a>
            </div>
        </div>

    }
</div>
        }
<script>
     $(".regularArticle").slick({
        dots: true,
        infinite: true,
        slidesToShow: 2,
        slidesToScroll: 2,
        responsive: [
        {
          breakpoint: 1024,
          settings: {
            slidesToShow: 3,
            slidesToScroll: 3,
            infinite: true,
            dots: true
          }
        },
        {
          breakpoint: 820,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1
          }
        },
        {
          breakpoint: 480,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1
          }
        }
        // You can unslick at a given breakpoint now by adding:
        // settings: "unslick"
        // instead of a settings object
      ]
      });
</script>