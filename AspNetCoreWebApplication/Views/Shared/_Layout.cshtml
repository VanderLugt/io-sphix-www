    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
    
    <style>
        .note-popover .popover-content, .panel-heading.note-toolbar {
            background: #ea9c0c !important;
        }
      .dropdown:hover .dropdown-menu {
        display: block;
        margin-top: -8px;
     }
      .modal-backdrop{
          z-index:0;
      }
    </style>
    <script src="~/js/validator.js"></script>
    <script src="~/js/site.js"></script>
    @if (User.Identity.IsAuthenticated)
    {
        <script src="~/js/User/UpdateProfilePicture.js"></script>
        <script type="text/javascript">

            $(document).ready(function () {
                $(".btnShowUpdatePictureModel").click(function () {
                    $("#updateProfilePicture").modal('show');
                });

                $("#btnHideModal").click(function () {
                    $("#txtPrpfilePicture").val('');
                    $("#updateProfilePicture").modal('hide');
                });

            });
        </script>
        <script> 
            $(document).ready(function () {
          
                $(document).ajaxStart(function () {
                    $("#wait").css("display", "block");
                });
                $(document).ajaxComplete(function () {
                    $("#wait").css("display", "none"); 

                    var divRightHeight = $('.body-content').height();
                    var divLeftHeight = $('#mainLeftSection').height();
                    console.log('Right : '+ (divRightHeight) + 'px left : ' +(divLeftHeight) + 'px');
                    if (divRightHeight != divLeftHeight) {
                        if (divRightHeight > divLeftHeight) {
                           // 
                            //  if (divRightHeight <=  898) {
                            //      $('#mainLeftSection').css('height', (divRightHeight) + 'px')
                            //}
                            //else {
                            //      $('#mainLeftSection').css('height', (divRightHeight) + 'px')
                            //}
                             $('#mainLeftSection').css('height', (divRightHeight) + 'px')
                           
                        }
                        else {
                            // $('#mainLeftSection').css('height', divLeftHeight + 'px')
                            $('#divContainer').css('height', (divLeftHeight-(divLeftHeight-divRightHeight)-1) + 'px')
                            
                        }
                    }
               
                });
            });

        //     var divHeight = $('.body-content').height();
        //alert(divHeight);
        //console.log(divHeight + 'px');
           
        </script>
    }

    @RenderSection("Scripts", required: false)

