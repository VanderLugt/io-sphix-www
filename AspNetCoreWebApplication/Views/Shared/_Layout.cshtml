<body class="body-bg-main">
    @Html.AntiForgeryToken()
    <div class="wrapper">
        <div class="body-overlay"></div>
        @if (User.Identity.IsAuthenticated)
        {
            <header class="black-header">
                <nav class="navbar navbar-expand-md navbar-dark fixed-top">
                    <div class="container">
                        <div class="pull-left">
                            @await Component.InvokeAsync("UserMenu")
                        </div>
                        <div class="pull-right">

                        </div>
                    </div>
                </nav>

                @*<nav class="website-nav">
                        <ul>
                            <li><a class="home-link" href="/">Home</a></li>

                        </ul>
                    </nav>*@
            </header>
        }
    <div class="main-body">
        <div class="row" style="margin:0px;">
            <div class="col-lg-4 col-md-4 col-sm-12 bg-left-section" id="mainLeftSection" >
                <div class="bg-left-block-inner" id="divLeftSection">
                    
                </div>
            </div>
            <div class="col-lg-8 col-md-8 col-sm-12 bg-right-section" id="mainRightSection">
                <div class="body-content">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    </div>
    <div id="wait" style=" display:none;width:150px;border:0px solid black;position:absolute;top:50%;left:50%;padding:2px;z-index:9999;"><img src="~/img/loading.gif" width="100" height="100" /></div>
