@model IEnumerable<Sphix.DataModels.UserCommunitiesGroups.UserArticleCommentsDataModel>
<ul>
    @foreach (var item in Model)
    {
        <li>@item.CommentText</li>
        <div>
            <i class="fa fa-comment-alt"></i><input type="button" class="replycomment" onclick="addAticleCommentBox(this,@item.Id);" value="Reply">
        </div>
        <div id="@item.Id">

        </div>
        <script>
                    $(document).ready(function () {
                        LoadArticleComments(11,@item.Id);
                    });
        </script>

    }
</ul>

